@model Lake_of_the_Humber.Models.WellWishDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Well Wishes</h2>

<h3>Are you sure you want to delete this Well Wish?</h3>
<div>
    <h4>Delete Confirmation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WishId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WishId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReceiverName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceiverName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatorId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsReceived)
        </dt>

        @if (Model.IsReceived == true)
        {
            <dd> @Html.Encode("Yes") </dd>
            <dt> @Html.DisplayNameFor(model => model.ReceivedDate) </dt>
            <dd> @Html.DisplayFor(model => model.ReceivedDate) </dd>
        }
        else
        {
            <dd> @Html.Encode("No")</dd>
        }

    </dl>

    @using (Html.BeginForm("Delete", "WellWishes", new { id = Model.WishId }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
