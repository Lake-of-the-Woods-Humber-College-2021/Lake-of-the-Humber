@model Lake_of_the_Humber.Models.ViewModel.ShowStaff

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4> @Model.StaffInfo.StaffFirstName @Model.StaffInfo.StaffLastName</h4>
    <hr />
    <div>@Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.StaffInfo.StaffId })</div>
    @{
        //Use server rendering to determine an image
        string pic = "/Content/Staffs/default.jpg";
        string alt = "No Staff Picture Provided.";
        if (Model.StaffInfo.StaffHasPic)
        {
            pic = "/Content/Products/" + Model.StaffInfo.StaffId + "." + Model.StaffInfo.StaffImagePath;
            alt = "Profile shot of " + Model.StaffInfo.StaffFirstName+Model.StaffInfo.StaffLastName;
        }
    }
    <div class="imagecontainer featured">
        <img src="@pic" alt="@alt" />
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>

        <dd>
