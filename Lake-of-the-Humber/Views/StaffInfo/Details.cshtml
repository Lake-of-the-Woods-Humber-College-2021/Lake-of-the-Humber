        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.StaffFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.StaffFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.StaffLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.StaffLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.StaffLanguage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.StaffLanguage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.StaffHasPic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.StaffHasPic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.StaffImagePath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.StaffImagePath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffInfo.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffInfo.DepartmentName)
