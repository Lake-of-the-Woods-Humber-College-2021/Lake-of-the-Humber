@model Lake_of_the_Humber.Models.ViewModels.UpdateFaq

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Created By: @Model.Faq.CreatorFname  @Model.Faq.CreatorLname</h4>

@using (Html.BeginForm("Edit", "Faq", new { id = Model.Faq.FaqId}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Faq</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Faq.FaqId, new { Name = "FaqId" })

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.Question, new { htmlAttributes = new { @class = "form-control", Name = "Question" } })
            @Html.ValidationMessageFor(model => model.Faq.Question, "", new { @class = "text-danger", data_valmsg_for = "Question" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.Answer, new { htmlAttributes = new { @class = "form-control", Name = "Answer" } })
            @Html.ValidationMessageFor(model => model.Faq.Answer, "", new { @class = "text-danger", data_valmsg_for = "Answer" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Publish, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Faq.Publish, new { htmlAttributes = new { @class = "form-control", Name = "Publish" } })
                @Html.ValidationMessageFor(model => model.Faq.Publish, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.FaqDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.FaqDate, new { htmlAttributes = new { @class = "form-control", Name = "FaqDate" } })
            @Html.ValidationMessageFor(model => model.Faq.FaqDate, "", new { @class = "text-danger", data_valmsg_for = "FaqDate" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">Image:</div>
            <div class="col-md-12">
                <input type="file" name="FaqImage" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
