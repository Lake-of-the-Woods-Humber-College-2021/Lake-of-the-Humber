@model Lake_of_the_Humber.Models.VolunteerDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Confirmation</h2>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Volunteer</h4>
    <hr />
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.VolunteerTitle</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.VolunteerDate</h6>
            <p class="card-text">@Model.VolunteerDescription</p>
        </div>
    </div>

    @using (Html.BeginForm("Delete", "Volunteer", new { id = Model.VolunteerId }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>